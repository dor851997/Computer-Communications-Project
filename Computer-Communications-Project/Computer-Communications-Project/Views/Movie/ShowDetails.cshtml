@model Computer_Communications_Project.ViewModel.MovieViewModel

@using Computer_Communications_Project.Models
@{ ViewBag.Title = "Edit"; }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Movie</title>
    <style type="text/css">
        body {
            font-family: Arial;
            font-size: 13pt;
        }

        .Grid {
            border: 1px solid #ccc;
            border-collapse: collapse;
        }

            .Grid th {
                background-color: #F7F7F7;
                font-weight: bold;
            }

            .Grid th, .Grid td {
                padding: 5px;
                border: 1px solid #ccc;
            }

            .Grid, .Grid table td {
                border: 0px solid #ccc;
            }

                .Grid th a, .Grid th a:visited {
                    color: #333;
                }
    </style>
</head>
<body>
    <div>
        <form action="ShowDetails" method="post">
            <br />
            <table>
                <tr>
                    <td>Enter movie name to search:</td>
                    <select name="movieName">
                        @foreach (Movie movie in Model.Movies)
                        {
                            <option value="@movie.MovieName">@movie.MovieName</option>
                        }
                    </select>
                    <td>@*<input id="Text" type="text" name="movieName" value="@Model.movieName.MovieName" />*@</td>
                </tr>
                <tr>
                    <td><input id="Submit" type="submit" value="Search Movie" /></td>
                </tr>
            </table>
        </form>
    </div>
    <br />
    <b>Search Results:</b>
    <br />
    @using (Html.BeginForm("Edit", "Movie", FormMethod.Post))
    {
        <table>
            <tr>
                <td>Movie Name: </td>
                <td>@Html.EditorFor(m => m.movieName.MovieName)</td>
            </tr>
            <tr>
                <td>Age Limet: </td>
                <td>@Html.EditorFor(m => m.movieName.AgeLimit)</td>
            </tr>
            <tr>
                <td>Category: </td>
                <td>@Html.EditorFor(m => m.movieName.Category)</td>
            </tr>
            <tr>
                <td>Price: </td>
                <td>@Html.EditorFor(m => m.movieName.Price)</td>
            </tr>
            <tr>
                <td>Date: </td>
                <td>@Html.EditorFor(m => m.movieName.Date)</td>

            </tr>
            <tr>
                <td>Discount: </td>
                <td>@Html.EditorFor(m => m.movieName.Discount) </td>
            </tr>
            <tr>
                <td>HallName </td>
                <td>@Html.EditorFor(m => m.movieName.HallName)</td>
            </tr>
            <tr>
                <td>Duration: </td>
                <td>@Html.EditorFor(m => m.movieName.Duration)</td>
            </tr>
            <tr>
                <td>SRC:</td>
                <td>@Html.EditorFor(m => m.movieName.src)</td>
            </tr>
            <tr>
                <td>Rating:</td>
                <td>@Html.EditorFor(m => m.movieName.Rating)</td>
            </tr>
        </table>
        <input id="Edit" type="Submit" value="Edit Movie" />
    }
</body>
</html>
