@model Computer_Communications_Project.Models.User

@using Computer_Communications_Project.Models
@{ ViewBag.Title = "Login"; }

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>User Login</title>

</head>
<body>
<h2>Login</h2>
    <br />
    <div>
        @using (Html.BeginForm("SubmitLogin", "Login", FormMethod.Post))
        {
            <table>
                <tr>
                    <td>Username: </td>
                    <td> @Html.TextBoxFor(m => m.UserName)</td>
                    <td>@Html.ValidationMessageFor(x => x.UserName)</td>
                </tr>
                <tr>
                    <td>Password: </td>
                    <td> @Html.PasswordFor(m => m.Password)</td>
                    <td>@Html.ValidationMessageFor(x => x.Password)</td>
                </tr>
            </table>
            <br />
            <h4 style="color:red">@TempData["LoginStatus"]</h4>
            <br />
            <input id="SubmitLogin" type="submit" value="Login"/>
        }
        <br /><br />
    </div>
</body>
</html>